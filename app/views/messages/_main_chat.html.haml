.chat-main
  .chat-header
    .chat-header__group-box
      .chat-header__group-box__name
        team : potepote
      .chat-header__group-box__member
        Member: potepote
    .chat-header__edit
      = link_to "Edit","https://twitter.com/",class:"btn" 
  .chat-message
    .chat-message__info
      .chat-message__info__box
        .chat-message__info__box__name
          potepote
        .chat-message__info__box__date
          2020/12/12(wed) 12:12
      .chat-message__info__message-box
        hey!
  .chat-form
    %form.new-message
      .input-box
        %input{type:"text",placeholder: "type a message",class: "input-box__message"}
        %label{class:"input-box__image"}
          = icon('far','image')
          %input{type:"file",class:"input-box__image__file"}
      %input{type:"submit", value:"SEND",class:"submit-btn"}